
<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="EstebanMQ">
    @RenderSection("title", false)

    <link href="~/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/admin.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    @RenderSection("estilos", false)
</head>

<body>
    <div class="wrapper">
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <p class="sidebar-brand">
                    Administración
                </p>

                <ul class="sidebar-nav">
                    <li class="sidebar-header">
                        Herramientas
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-controller="CitasAdministracion" asp-action="CitasListado">
                            <i class="align-middle" data-feather="calendar"></i> <span class="align-middle">Citas</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-controller="ConsultasAdministracion" asp-action="ConsultasListado">
                            <i class="align-middle" data-feather="message-square"></i> <span class="align-middle">Consultas</span>
                        </a>
                    </li>

                    <partial name="_AdminEmpleadosPartial" />

                </ul>
            </div>
        </nav>

        <div class="main">
            <nav class="navbar navbar-expand navbar-light navbar-bg">
                <a class="sidebar-toggle js-sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#"
                               data-bs-toggle="dropdown">
                                <!-- <img src="img/avatars/avatar.jpg" class="avatar img-fluid rounded me-1"
                alt="Charles Hall" />-->
                                <span class="text-dark">@Context.User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Name).Value</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" asp-controller="Manage" asp-action="PerfilEmpleado">
                                    <i class="align-middle me-1"
                                       data-feather="user"></i> Perfil

                                </a>
                                <a class="dropdown-item" asp-controller="Manage" asp-action="CerrarSesion">
                                    <i class="align-middle me-1"
                                       data-feather="log-out"></i>Log out
                                </a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#"
                               data-bs-toggle="dropdown">
                                <i class="align-middle" data-feather="user"></i>
                            </a>

                      
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" asp-controller="Manage" asp-action="PerfilEmpleado">
                                    <i class="align-middle me-1"
                                       data-feather="user"></i> Perfil

                                </a>
                                <a class="dropdown-item" asp-controller="Manage" asp-action="CerrarSesion">
                                    <i class="align-middle me-1"
                                       data-feather="log-out"></i>Log out
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="content">
                @RenderBody()
            </main>


            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-12 text-start">
                            <p class="mb-0">
                                <a class="text-muted" href="#"
                                   target="_blank"><strong>Adiestramiento de perros 2022</strong></a> &copy;
                            </p>
                        </div>

                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script>
        $("#btnSidebarCollapse").click(function () {
            $('#sidebarMenu').toggle('hidden');
        });

        $("#btnClose").click(function () {
            $("#sidebarMenu").toggle('hidden');
        });
    </script>
    @RenderSection("scripts", false)

</body>
</html>
