@model Cita

@{
    Layout = ViewBag.Layout;
}


@section title {
    <title>Modificar cita</title>
}

<h2>Modificar cita</h2>

<form method="post">
    <input type="hidden" name="idcita" value="@Model.IdCita" />
    <div class="form-group">
        <label>Fecha cita</label>
        <input class="form-control" type="text" value="@Model.FechaCita.Date" disabled />
    </div>
    <div class="form-group">
        <label>Nombre del perro</label>
        <input class="form-control" type="text" value="@Model.NombrePerro" disabled />
    </div>
    <div class="form-group">
        <label>Raza del perro</label>
        <input class="form-control" type="text" value="@Model.RazaPerro" disabled />
    </div>
    <div class="form-group">
        <label>Motivo</label>
        <textarea class="form-control" name="motivocita" rows="3" maxlength="255">@Model.MotivoCita</textarea>
    </div>
    <div class="form-group">
        <label>Objetivo</label>
        <textarea class="form-control" name="objetivocita" rows="3" maxlength="255">@Model.ObjetivoCita</textarea>
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-warning">
            Modificar
        </button>
    </div>
</form>