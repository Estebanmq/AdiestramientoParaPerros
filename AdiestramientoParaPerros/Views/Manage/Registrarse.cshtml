@section title {
    <title>Registro</title>
}

@section navlinks {
    <a class="nav-item nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
    <a class="nav-item nav-link" asp-controller="Citas" asp-action="CitasIndex">Concertar Cita</a>
    <a class="nav-item nav-link" asp-controller="QuienesSomos" asp-action="QuienesSomosVista">Quienes Somos</a>
    <a class="nav-item nav-link" asp-controller="Contacto" asp-action="ContactoVista">Contacto</a>
}


<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Registro</h1>
    </div>
</div>
<!-- Page Header End -->
<!-- Contact Start -->
<div class="container-fluid bg-light overflow-hidden px-lg-0" style="margin: 6rem 0;">
    <div class="container contact pt-5 px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 p-4 wow fadeIn" data-wow-delay="0.5s">
                <p class="mb-4">Rellene el siguiente formulario para concertar la cita. Los campos marcados con <strong>*</strong> son obligatorios</p>
                <form method="post">
                    <div class="row g-3">
                        <div class="col-12 col-sm-4">
                            <input id="cajanombre" class="form-control border-0" style="height: 55px;" type="text" name="nombre" placeholder="Nombre *"
                                   required maxlength="50" />
                        </div>
                        <div class="col-12 col-sm-8">
                            <input id="cajaapellidos" class="form-control border-0" style="height: 55px;" type="text" name="apellidos" placeholder="Apellidos"
                                   maxlength="50" />
                        </div>

                        <div class="col-12 col-sm-8">
                            <input id="cajausuario" class="form-control border-0" style="height: 55px;" type="text" name="nombreusuario" placeholder="Usuario *"
                                   required maxlength="50" />
                        </div>
                        <div class="col-12 col-sm-4">
                            <input id="cajatelefono" class="form-control border-0" style="height: 55px;" type="text" name="telefono" placeholder="Teléfono *"
                                   title="Debe introducir un telefóno válido de 9 dígitos" minlength="9" maxlength="9" required/>
                        </div>

                        <div class="col-12">
                            <input id="cajacorreo" class="form-control border-0" style="height: 55px;" type="email" name="correo" required placeholder="Correo electrónico *"
                                   pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,4}$" title="El email debe segir un formato como el siguiente: email@ejemplo.com. El dominio (.com por ejemplo, debe tener al menos 2 caracteres)" maxlength="100" />
                        </div>

                        <div class="col-12">
                            <input id="cajacontrasenya" class="form-control border-0" style="height: 55px;" type="password" name="password" placeholder="Contraseña *" required
                                   pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$" title="La contraseña debe de tener mínimo ocho caracteres, al menos una letra y un número" minlength="8" />
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100 py-3">
                                Registrarse
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
</div>
<!-- Contact End -->


@section scripts {
    <script>
        $("#cajatelefono").on('keypress', function (event) {
            var regex = new RegExp("[0-9]");
            var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
            if (!regex.test(key)) {
                event.preventDefault();
                return false;
            }
        });
    </script>
}>
