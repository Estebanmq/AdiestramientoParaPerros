@model List<Consulta>

@{
    Layout = ViewBag.Layout;
    List<Estado> estados = ViewBag.Estados as List<Estado>;
}

@section title {
    <title>Consultas</title>
}


@foreach (Consulta c in Model)
{
    <div class="card m-2">
        <div class="card-header">
            @estados.Find(z => z.IdEstado == c.Estado).TextoEstado
        </div>
        <div class="card-body">
            @if (c.TelefonoContacto != "")
            {
                <h5 class="card-title">Teléfono: @c.TelefonoContacto</h5>
            }
            @if (c.EmailContacto != "")
            {
                <h5 class="card-title">Email: @c.EmailContacto</h5>
            }
            <p class="card-text">@c.TextoConsulta</p>

            <a class="btn btn-info" asp-controller="ConsultasAdministracion" asp-action="DetallesConsulta" asp-route-idconsulta="@c.IdConsulta">
                Detalles
            </a>

        </div>
    </div>
}